<% unless @titles %>
  <%= link_to "Login with Readability", register_home_path %>
<% else %>
  <%= form_tag home_path, method: :get do |f| %>
    <%= check_box_tag :archive, 'show', params[:archive] == 'show' %> Show Archived
    <%= check_box_tag :favorite, 'show', params[:favorite] == 'show' %> Favorites
    <br/>
    <%= submit_tag "Update" %>
  <% end %>
  <ul>
    <% @titles.each do |article| %>
      <li><%= article %></li>
    <% end %>
  </ul>
<% end %>
